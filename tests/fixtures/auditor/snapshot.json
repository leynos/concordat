{
  "repository": {
    "owner": "example",
    "name": "demo",
    "default_branch": "main",
    "allow_squash_merge": true,
    "allow_merge_commit": false,
    "allow_rebase_merge": false,
    "allow_auto_merge": false,
    "delete_branch_on_merge": true
  },
  "branch_protection": {
    "enforce_admins": true,
    "require_signed_commits": true,
    "required_linear_history": true,
    "require_conversation_resolution": true,
    "allows_deletions": false,
    "allows_force_pushes": false,
    "status_checks": {
      "strict": true,
      "contexts": ["concordat/auditor"]
    },
    "pull_request_reviews": {
      "required_approvals": 2,
      "dismiss_stale_reviews": true,
      "require_code_owner_reviews": true
    }
  },
  "teams": [
    {"slug": "platform-engineering", "permission": "maintain"}
  ],
  "collaborators": [],
  "labels": [
    {
      "name": "priority/p0-blocker",
      "color": "b60205",
      "description": "Blocking incidents or outages that require immediate action."
    },
    {
      "name": "priority/p1-critical",
      "color": "d93f0b",
      "description": "Critical flow work."
    },
    {
      "name": "priority/p2-major",
      "color": "fbca04",
      "description": "Major roadmap work."
    },
    {
      "name": "priority/p3-normal",
      "color": "0e8a16",
      "description": "Standard backlog items."
    }
  ]
}
